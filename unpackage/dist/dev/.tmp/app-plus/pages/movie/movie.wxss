.player {
	background: black;
}
.movie {
	width: 100%;
	height: 440rpx;
}
.movie-info {
	padding: 40rpx 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
	background-color: #f7f4f9;
}
.cover {
	width: 280rpx;
	height: 380rpx;
}
.movie-desc {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	margin-left: 30rpx;
	width: 400rpx;
}
.title {
	font-size: 30px;
}
.basic-info {
	color: darkgray;
	font-size: 13px;
	line-height: 36rpx;
	white-space: nowrap;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
}
.score-block {
	background-color: #ffffff;
	margin-top: 20rpx;
	width: 360rpx;
	height: 90rpx;
	padding: 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	    -ms-flex-pack: start;
	        justify-content: flex-start;
	
	-webkit-box-shadow: 3px 2px 10px #dedede;
	
	        box-shadow: 3px 2px 10px #dedede;
}
.score-words {
	font-size: 12px;
	color: gray;
}
.movie-score {
	font-size: 26px;
	font-weight: 700;
	margin-left: 8rpx;
	color: #feab2a;
	line-height: 60rpx;
}
.praise-counts{
	font-size: 12px;
	color: grey;
	line-height: 44rpx;
}
.plots-block{
	background-color: #F7F4F9;
	padding: 20rpx 40rpx;
}
.plots-title{
	color: #A9A9A9;
	font-size: 14px;
}
.plots-desc{
	margin-top: 10rpx;
	font-size: 14px;
}
.scroll-block{
	background-color: #F7F4F9;
	padding: 20rpx 40rpx;
/* 	display: flex;
	flex-direction: row; */
}
.scroll-list{
	width: 100%;
	white-space: nowrap;
	margin-top: 20rpx;
}
.plot-image{ width: 220rpx; height: 320rpx; margin-right: 10rpx;}
.single-actor{ width: 170rpx; height:240rpx; margin-right: 10rpx;}
.actor-wapper{ display: inline-block;}
.actor-name{ width: 170rpx;text-align: center; font-size: 15px; white-space: nowrap; -o-text-overflow: ellipsis; text-overflow: ellipsis; overflow: hidden;}
.actor-role{width: 170rpx; text-align: center; font-size: 15px;}

